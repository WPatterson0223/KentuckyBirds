@model IEnumerable<Checklist>

<h2>Birds</h2>

<div style="display: block">
    <a class="addbird" href="/Checklist/InsertBird/">Add a New Bird</a>
</div>

<div class="col-1 p-0 justify-content-end">
    <form asp.controller="Bird" asp.action="Index">
        <span class="btn.group">
            <input class="form control" type="text" name="userSearch" placeholder="Name">
            <input class="p-1 m1-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>

    </form>
</div>

