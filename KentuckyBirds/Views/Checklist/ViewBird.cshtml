<img id="pic" alt="@Model.Name" src="@Url.Content("~/"+ Model.Picture + "")" />
<ul>

    <li class="birdlist">@Model.LatinName</li>
    <li class="birdlist">Length: @Model.Length</li>
    <li class="birdlist">Height: @Model.Height</li>
    <li class="birdlist">Wingspan: @Model.Wingspan</li>
    <li class="birdlist">Comment: @Model.Comment</li>
</ul>

<div style="display: block">
    <a href="/Checklist/UpdateBird/@Model.ID">Update this Bird</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteBird", "Checklist", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this bird" />
    }
</div>

