@model IEnumerable<Stats>

<h2>Birds</h2>

<div style="display: block">
    <a href="/Stats/InsertBird/">Add a New Bird</a>
</div>

<div class="col-1 p-0 justify-content-end">
    <form asp.controller="Bird" asp.action="Index">
        <span class="btn.group">
            <input class="form control" type="text" name="userSearch" placeholder="Search">
            <input class="p-1 m1-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>

    </form>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Latin Name</th>
        <th>Length</th>
        <th>Height</th>
        <th>Wingspan</th>
    </tr>

    @foreach (var bird in @Model)
    {
        <tr>
            <td>@bird.ID</td>
            <td><a href=/Stats/ViewBird/@bird.ID>@bird.Name</a></td>
            <td>@bird.LatinName</td>
            <td>@bird.Length</td>
            <td>@bird.Height</td>
            <td>@bird.Wingspan</td>
        </tr>
    }

</table>