@model Traits

<h3>@Model.Name Information</h3>

<img id="pic" alt="@Model.Name" src="@Url.Content("~/"+ Model.Picture + "")" />
<ul>
    <li class="birdlist">@Model.LatinName</li>
    <li class="birdlist">Length: @Model.Length</li>
    <li class="birdlist">Height: @Model.Height</li>
    <li class="birdlist">Wingspan: @Model.Wingspan</li>
</ul>

<div style="display: block">
    @using (Html.BeginForm("InsertChecklistFromTraits", "Traits", "Post"))
    {
        <input type="hidden" asp-for="Name" value="@Model.Name" />
        <input type="hidden" asp-for="LatinName" value="@Model.LatinName" />
        <input type="hidden" asp-for="Length" value="@Model.Length" />
        <input type="hidden" asp-for="Height" value="@Model.Height" />
        <input type="hidden" asp-for="Wingspan" value="@Model.Wingspan" />
        <input type="hidden" asp-for="Picture" value="@Model.Picture" />
        <input class="button" type="submit" onclick="return confirm('Are you sure?')" value="Add to My List" />
    }
</div>

    @if (Model.ID > 37)
    {
        <div style="display: block">
            <button onclick="window.location.href='/Traits/UpdateBird/@Model.ID';">
                Update This Bird
            </button>
        </div>
    }

    @if (Model.ID > 37)
    {
        <div style="display: block">
            @using (Html.BeginForm("DeleteBird", "Traits", "Post"))
            {
                <input type="hidden" asp-for="ID" value="@Model.ID" />
                <input class="button" type="submit" onclick="return confirm('Are you sure?')" value="Delete this bird" />
            }
        </div>
    }





